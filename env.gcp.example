# ComplianceIQ GCP Production Environment Variables
# Copy this file to .env.production and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Cloud SQL PostgreSQL connection string
# Format: postgresql://username:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DATABASE_URL="postgresql://complianceiq-user:YOUR_DB_PASSWORD@/complianceiq?host=/cloudsql/complianceiq-prod:us-central1:complianceiq-db"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://complianceiq-prod-xxxxx-uc.a.run.app"
PORT=3000

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection URL for caching and sessions
REDIS_URL="redis://10.x.x.x:6379"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# NextAuth.js configuration
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL="https://complianceiq-prod-xxxxx-uc.a.run.app"

# JWT Secret for API authentication
JWT_SECRET="your-jwt-secret-key-here"

# ===========================================
# CLOUD STORAGE CONFIGURATION
# ===========================================
# Google Cloud Storage bucket for file uploads
GCS_BUCKET_NAME="complianceiq-files-prod"
GCS_PROJECT_ID="complianceiq-prod"

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Google Cloud Monitoring
GOOGLE_CLOUD_PROJECT="complianceiq-prod"
GOOGLE_APPLICATION_CREDENTIALS="/app/credentials.json"

# Log level
LOG_LEVEL="info"

# ===========================================
# ASKREXI CONFIGURATION
# ===========================================
# AskRexi AI service configuration
ASKREXI_MODEL="gemini-pro"
ASKREXI_MAX_TOKENS=4000
ASKREXI_TEMPERATURE=0.7

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_ASKREXI="true"
ENABLE_COLLABORATION="true"
ENABLE_REAL_TIME="true"
ENABLE_ANALYTICS="true"

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# SMTP configuration for notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ===========================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ===========================================
# External API keys
OPENAI_API_KEY="your-openai-key"
ANTHROPIC_API_KEY="your-anthropic-key"

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Database backup settings
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Caching settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ===========================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ===========================================
DEBUG="false"
VERBOSE_LOGGING="false"
ENABLE_DEBUG_ROUTES="false"
