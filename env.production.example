# ComplianceIQ Production Environment Variables
# Copy this to .env.local for production deployment

# Database
DATABASE_URL="postgresql://complianceiq_user:secure_password@localhost:5432/complianceiq_prod"
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="https://complianceiq.com"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# API Keys
GEMINI_API_KEY="your-gemini-api-key"
API_KEYS="prod_key_1,prod_key_2,prod_key_3"

# Security
JWT_SECRET="your-jwt-secret-change-this"
ENCRYPTION_KEY="your-encryption-key-32-chars"

# Application
NODE_ENV="production"
PORT=3000

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="complianceiq"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Storage (if needed)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="complianceiq-files"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Feature Flags
ENABLE_COLLABORATION="true"
ENABLE_ANALYTICS="true"
ENABLE_REAL_TIME_UPDATES="true"
MAX_TEAM_SIZE="10"
